@page
@model Volkau_Html_Intro.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Create New</span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Drug[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drug[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drug[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drug[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Drug) {
        <tr>
            <td>
                <img src="~/images/@item.Image" alt="NoImage" width="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"
                   class="btn btn-outline-info">
                <span class="fas fa-edit"></span></a>

                <a asp-page="./Delete" asp-route-id="@item.Id"
                   class="btn btn-outline-danger">
                <span class="fas fa-trash-alt"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
