@page "{id:int}"
@model Volkau_Html_Intro.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Drug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Drug.Id" />
            <div class="form-group">
                @if (!string.IsNullOrEmpty(@Model.Drug.Image))
            {
                <img src="~/images/@Model.Drug.Image",
                     alt="NoSuchFile" width="150" />
            } else
             {
                    <h4>Image file wasn't specified.</h4>
                     
             }
            <div class="custom-file mt-3">
                <input type="file" class="custom-file-input"
                       asp-for="Image" id="customFile" />
                <label class="custom-file-label" for="customFile">
                    Choose image file
                </label>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="Drug.Name" class="control-label"></label>
                <input asp-for="Drug.Name" class="form-control" />
                <span asp-validation-for="Drug.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drug.Description" class="control-label"></label>
                <input asp-for="Drug.Description" class="form-control" />
                <span asp-validation-for="Drug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drug.Price" class="control-label"></label>
                <input asp-for="Drug.Price" class="form-control" />
                <span asp-validation-for="Drug.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drug.GroupId" class="control-label"></label>
                <select asp-for="Drug.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                <span asp-validation-for="Drug.GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drug.Image" class="control-label"></label>
                <input asp-for="Drug.Image" class="form-control" />
                <span asp-validation-for="Drug.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts{
    <script src="~/js/bs-custom-file-input.js"></script>
    <script>
        bsCustomFileInput.init();
    </script>
}